AddDefaultCharset UTF-8
ErrorDocument 400 /errors/400.html
ErrorDocument 401 /errors/401.html
ErrorDocument 403 /errors/403.html
ErrorDocument 404 /errors/404.html
ErrorDocument 409 /errors/409.html
ErrorDocument 410 /errors/410.html
ErrorDocument 500 /errors/500.html
ErrorDocument 501 /errors/501.html
Options +FollowSymlinks -Indexes
RewriteEngine on
RewriteBase /
RewriteRule ^(css|images|script|tools)/(.*)$ $1/$2 [NE,NC,PT]
RewriteRule ^(templates|components|modules|vendor)/(.*).(css|png|jpg|gif|svg|js|ico|swf|xml|xsl|flv|mp3|mp4|ttf|woff2)$ $1/$2.$3 [NE,NC,PT]
RewriteRule ^(.*)$ http.php?%{QUERY_STRING} [L]